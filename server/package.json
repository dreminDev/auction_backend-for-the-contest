{
    "name": "auction_backend-for-the-contest",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "bun run index.ts",
        "dev": "bun run --watch index.ts",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "bot:participant": "bun run src/bots/scripts/participant.ts",
        "bot:sniping": "bun run src/bots/scripts/sniping.ts",
        "bot:load": "bun run src/bots/scripts/load_test.ts",
        "bot:load:small": "PARTICIPANT_BOTS=5 SNIPING_BOTS=1 INITIAL_BALANCE=100000000 bun run src/bots/scripts/load_test.ts",
        "bot:load:medium": "PARTICIPANT_BOTS=20 SNIPING_BOTS=3 INITIAL_BALANCE=500000000 bun run src/bots/scripts/load_test.ts",
        "bot:load:large": "PARTICIPANT_BOTS=50 SNIPING_BOTS=5 INITIAL_BALANCE=1000000000 bun run src/bots/scripts/load_test.ts",
        "bot:load:extreme": "PARTICIPANT_BOTS=2000 SNIPING_BOTS=0 INITIAL_BALANCE=10000000000 bun run src/bots/scripts/load_test.ts"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "prettier": "^3.2.5",
        "prettier-plugin-organize-imports": "^4.0.0"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@fastify/cors": "^11.2.0",
        "@prisma/client": "6.19",
        "@types/node": "^25.0.9",
        "async-mutex": "^0.5.0",
        "dotenv": "^17.2.3",
        "fastify": "^5.7.1",
        "migrate-mongo": "^14.0.7",
        "pino": "^10.2.1",
        "pino-pretty": "^13.1.3",
        "prisma": "6.19",
        "zod": "^4.3.5"
    }
}
